---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	*{
		margin:0;
		padding: 0;
		box-sizing: border-box;
		font-family:cursive;
	}
	.contenedor{
        padding: 3.75rem 0;
		width: 90%;
		max-width: 62.5rem;
		margin: auto;
		overflow: hidden;
    }
	.titulo{
		background: -webkit-linear-gradient(to right, hsl(13, 97%, 55%), hsl(40, 92%, 58%));
		background: linear-gradient(to right, hsl(13, 97%, 55%), hsl(40, 92%, 58%));
		-webkit-background-clip: text;
		background-clip: text;
		color: transparent;
		font-size: 1.875rem;
		text-align: center;
		margin-bottom: 3.75rem;

	}
	
	.headerI{
		width: 100%;
		height: 37.5rem;
		background: #fc4a1a;  /* fallback for old browsers */
		background: -webkit-linear-gradient(to right, hsla(13, 97%, 55%, 0.233), hsla(40, 92%, 58%, 0.329)),url(../../public/FotoInicio.jpg); /* Chrome 10-25, Safari 5.1-6 */
		background: linear-gradient(to right, hsla(13, 97%, 55%, 0.233), hsla(40, 92%, 58%, 0.329)),url(../../public/FotoInicio.jpg); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
		background-size:cover;
		background-position: center; 
		background-attachment: fixed ;
		position: relative;

	}


	.headerI .textos-header {
		display: flex;
		height: 26.875rem;
		width: 100%;
		align-items: center;
		justify-content: center;
		flex-direction: column;
		text-align: center;
	}
	.textos-header h1 {
		font-size: 50px;
		background: -webkit-linear-gradient(to right, #AA151B 33%, #F1BF00 33%, #F1BF00 66%, #AA151B 66%);
		background: linear-gradient(to right, #AA151B 33%, #F1BF00 33%, #F1BF00 66%, #AA151B 66%);
		-webkit-background-clip: text;
		background-clip: text;
		color: transparent;
	}

	.textos-header h2 {
		font-size: 30px;
		font-weight: 300;
		background: -webkit-linear-gradient(to right, #AA151B 33%, #F1BF00 33%, #F1BF00 66%, #AA151B 66%);
		background: linear-gradient(to right, #AA151B 33%, #F1BF00 33%, #F1BF00 66%, #AA151B 66%);
		-webkit-background-clip: text;
		background-clip: text;
		color: transparent;
	}
	.wave{
		position: absolute;
		bottom: -1px;
		width: 100%;
		
	}
   
	.contenedor-sobre-nosotros{
		display: flex;
		gap: 3.125rem;
		align-items: center;
		justify-content:center;
	}

	.imagen-about-us{
        width: 30vw;
		height: 420px;
		border: 5px solid #000;
		border-radius: .9375rem; 
    }

	.sobre-nosotros .contenido-textos{
		width: 48%;

	}

	.contenido-textos h3{
		margin-bottom: 15px;
	}
	.contenido-textos h3 span{
		background: -webkit-linear-gradient(to right, hsl(253, 100%, 51%), hsl(240, 20%, 99%));
		background: linear-gradient(to right, hsl(253, 100%, 51%), hsl(240, 20%, 99%));
		color: bl;
		border-radius: 50%;
		display: inline-block;
		text-align: center;
		height: 30px;
		width: 30px;
		padding: 2px;
		box-shadow: 0 0 6px rgba(0, 0, 0, 0.5) ;
		margin-right: 5px

	}
	.contenido-textos p {
		padding: 0px 0px 30px 15px;
		font-weight: 300;
		text-align: justify;
	}
	
	.cards{
		display: flex;
		justify-content: space-evenly;
		flex-wrap: wrap;
		gap: 10px;
		
	}

	.cards .card{
		background: -webkit-linear-gradient(to right, hsl(13, 97%, 55%), hsl(40, 92%, 58%));
		background: linear-gradient(to right, hsl(13, 97%, 55%), hsl(40, 92%, 58%));
		display: flex;
		width: 700px;
		height: 250px;
		align-items: center;
		justify-content: space-evenly;
		border: 5px solid black;
		border-radius: 10px;
		box-shadow: 0 0 6px 0 rgba(0, 0, 0, 0.6);
	}
	.cards .card .img{
		width: ;
		height: 100%;
		border:3px solid transparent ;
		border-radius: 50%;
		display: block;
		
		
	}
	@media (max-width: 970px) {
		.headerI{
			background-size: cover; 
            background-position: center; 

	    }
		.imagen-about-us{
			width: 70vw;
			height: auto;
			border: 5px solid #000;
			border-radius: .9375rem; 
   		 }
		.contenedor-sobre-nosotros{
			flex-direction: column;
			padding: 0 0 0 0;
			/* align-items: center; */
			/* justify-content:center; */
		}
		.sobre-nosotros .contenido-textos{
			width: 80%;

		}


	}
	@media (max-width: 445px){

		.imagen-about-us{
			width: 230px;
			height: auto;
			border: 5px solid #000;
			border-radius: .9375rem; 
   		 }

		.sobre-nosotros .contenido-textos{
			width: 80%;

		}

	}



</style>